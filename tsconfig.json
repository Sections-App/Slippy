{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
